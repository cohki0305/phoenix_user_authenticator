<h1>ユーザ登録</h1>

<%= form_for @changeset, registrations_path(@conn, :create), fn form -> %>

  <div class="form-group">
    <label>メールアドレス</label>
    <%= email_input form, :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <label>パスワード</label>
    <%= password_input form, :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit "ユーザ登録", class: "btn btn-primary" %>
  </div>
<% end %>
